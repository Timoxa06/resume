{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<section>
    <div class="text-center">
        {{#with page_header}}
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        {{#with button_text}}
            <button type='button' class=" btn btn-primary">{{solid}}</button><br>
            <br>
            <br>
            <button type='button' class=" btn btn-outline-primary">{{outline}}</button>
        {{/with}}
    {{/with}}
    </div>

    {{#with section}}
    <div class="card">
        
            {{#with about_us}}
                <div class="card-body">
                    {{#with title_list}}
                        <div class="display-6 text-end">{{main}}</div>
                        <h2 class="text-end">{{sub}}</h2>
                    {{/with}}
                    {{#with button}}
                    <button type="button" class="btn btn-outline-info">{{text}}</button>
                    {{/with}}
                </div>
            {{/with}}
        
    </div>

    <br>

    <div class="card">
        {{#with advantage}}
        <div class="card-body">
            <div class="text-muted display-5">{{title}}</div>
        </div>

        <div class="card">
            <div class="card-body">
                {{#with efficiency}}
                <div class="text-muted display-4">
                    {{title}}
                </div>
                <h6>{{sub_title}}</h6>
                <p>{{description}}</p>
                <button type="button" class="btn btn-outline-warning">
                    {{button}}
                </button>
            {{/with}}
            </div>

            <div class="card">
                {{#with innovation}}
                    <div class="card-body">
                        <div class="text-muted text-center display-4">{{title}}</div>
                        <h6 class="text-center">{{sub_title}}</h6>
                        <p class="text-center">{{description}}</p>
                        <button type="button" class="btn btn-outline-warning">{{button}}</button>
                    </div>
                {{/with}}
            </div>
        
            <div class="card">
                {{#with collaboration}}
                    <div class="card-body">
                        <div class="text-muted text-end display-4">{{title}}</div>
                        <h6 class="text-end">{{sub_title}}</h6>
                        <p class="text-end">{{description}}</p>
                        <button type="button" class="btn btn-outline-warning">{{button}}</button>
                    </div>
                {{/with}}
            </div>

        </div>
        {{/with}}

        

        

    </div>
    <br>
    <div class="card">
       {{#with agreement}}
        <div class="card-body">
            <div class="display-5">{{title}}</div>
            <div class="card">
                {{#with info}}
                    <div class="card-body">
                        <h5>{{sub_title}}</h5>
                    </div>
                
                <div class="card">
                    {{#with detail}}
                        <div class="card-body">
                        <p>{{text}}</p>
                            <button type="button" class="btn btn-success">{{button}}</button>
                        </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
        </div>
       {{/with}}
    </div>
    {{/with}}

    

    
</section>


