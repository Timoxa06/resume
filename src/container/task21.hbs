{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<section class="card">
    <div class="card">
    {{#with heading}}
    <div class="card-body">
        {{#with main}}
        <h1>{{title}}</h1>
        <p>{{text}}</p>
        {{#with button_text}}
            <button type='button' class=" btn btn-primary">{{solid}}</button><br>
            <br>
            <br>
            <button type='button' class=" btn btn-outline-primary">{{outline}}</button>
        {{/with}}
    {{/with}}
    </div>
    </div>
            <br>
        
        <div class="card">
            <div class="card-body">
                    {{#with second}}
                        <h2>{{title}}</h2>
                        <p>{{text}}</p>
                        {{#with button_text}}
                            <button type='button' class=" btn btn-secondary">{{solid}}</button>
                            <br>
                            <br>
                            <button type='button' class=" btn btn-outline-secondary">{{outline}}</button>    
                        {{/with}}
                    {{/with}}
             </div>
        </div> 
        <br>
        <div class="card">
            <div class="card-body">
                    {{#with subblock}}
                        <h2>{{title}}</h2>
                        <p>{{text}}</p>
                        {{#with button_text}}
                            <button type='button' class=" btn btn-dark">{{solid}}</button>
                            <br>
                            <br>
                            <button type='button' class=" btn btn-outline-dark">{{outline}}</button>    
                        {{/with}}
                    {{/with}}
             </div>
        </div>
    {{/with}}
    <br>
    <div class="card">
        {{#with nested_display}}
        <div class="card-body display-1">{{title}}</div>
            {{#with children_display}}
                <section class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="display-4">{{title}}</div>
                            <p>{{text}}</p>
                            
                                <button type='button' class=" btn btn-outline-warning">{{text}}</button>
                            
                            
                        </div>
                        
                    </div>
                </section>
            {{/with}}
        <div class="card-body">
            <h6>{{header_text}}</h6>
            {{#with button}}
                <button type='button' class=" btn btn-info">{{text}}</button>
            {{/with}}
        </div>
        
        {{/with}}
    </div>
    <br>
    <div class="card">
    {{#with paragraph}}
        <div class="card-body">
        <p class="text-uppercase">{{title}}</p>
        <p class="text-lowercase">{{text}}</p>
        {{#with button}}
            <a href="{{url}}">{{text}}</a>
        {{/with}}
        <br>
        <br>
        <div class="card">
            {{#each list_name}}
            <div class="card-body">
                <ul>
                    <li><a href="{{url}}">{{text}}</a></li>
                </ul>
            </div>
            {{/each}}
        </div>
        
        </div>     
    {{/with}}
    </div>

</section>


