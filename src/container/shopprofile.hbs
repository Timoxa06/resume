<main>
    {{#with navigation}}
    
    <div class="card">
        
        <div class="nav">
            {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link ps-3">{{text}}</a>
                </div>
            {{/each}}
            <a href="{{href}}" class="nav-link ps-3 disabled">Disabled</a>
        </div>
        
       
    </div>

    {{/with}}
    
    <br>
    <br>

    <h1>{{header}}</h1>

    {{#with purchase}}
    <div class="row g-3">
        
        <div class="col-12">
            
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    <a href="url" class="nav-link text-primary">{{this}}</a>
                </div>
                {{/each}}
            </div>

        </div>
    

        {{#with actionBlock}}
            <div class="col-3 card">
                
                {{#with input}}
                    <div class="p-2 text-secondary" selected>{{placeholder}}</div>
                {{/with}}

            </div>   
                
                {{#each buttons}}
                    <div class="col-2">
                        <button type="button" class="btn {{#if isSuccess}} btn-success {{/if}} {{#if isOutline}} btn-outline-success {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}">{{text}}</button>
                    </div>
                {{/each}}
                
                
        {{/with}}
            
    
        
    

    <br>
    <br>
    <hr>
    <br>

    <div>{{> purchaseItem}}</div>

    {{/with}}
    <br>
    <hr>
    <br>

    <div class="row g-2">
        {{#with userInfo}}
            <h2>{{title}}</h2>
            {{#with profileData}}
                <div class="card">
                    <div class=" display-5 card-title">{{title}}</div>
                    {{#with fullName}}
                        <div class="card m-2">
                            <div class="card-body">

                                <div class="row">
                                    
                                <div class="col-4">
                                {{#with surname}}
                                    
                                        <div>{{title}}</div>
                                    

                                    
                                        <div>{{value}}</div>
                                    
                                {{/with}}
                                </div>

                                <div class="col-4">
                                {{#with name}}
                                    
                                        <div>{{title}}</div>
                                    

                                    
                                        <div>{{value}}</div>
                                    
                                {{/with}}
                                </div>

                                <div class="col-4">
                                {{#with middleName}}
                                    
                                        <div>{{title}}</div>
                                    

                                    
                                        <div>{{value}}</div>
                                    
                                {{/with}}
                                </div>
                                </div>

                            </div>
                        </div>
                    {{/with}}

                    <br>

                    {{#with otherInfo}}
                        <div class="card m-2">
                            <div class="card-body">
                                
                                <div class="row">
                                    
                                <div class="col-4">
                                {{#with birthday}}
                                    
                                        <div>{{title}}</div>
                                    

                                    
                                        <div>{{value}}</div>
                                    
                                {{/with}}
                                </div>

                                <div class="col-4">
                                {{#with sex}}
                                    
                                        <div>{{title}}</div>
                                    

                                    
                                        <div>{{value}}</div>
                                    
                                {{/with}}
                                </div>

                                <div class="col-4">
                                {{#with language}}
                                    
                                        <div>{{title}}</div>
                                    

                                    
                                        <div>{{value}}</div>
                                    
                                {{/with}}
                                </div>
                                </div>

                            </div>
                        </div>
                    {{/with}}

                
            {{/with}}
            
                <br>
            
                
                    <div class="card m-2">
                        <div class="card-body">
                            <div class="row">
                            {{#each buttons}}
                            
                                
                            <div class="col-4">
                                
                                <button type="button" class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-secondary {{/if}} {{#if isDanger}} btn-danger {{/if}}">{{text}}</button>
                                
                            </div>

                            {{/each}}
                            </div>

                        </div>
                    </div>
                    
                
            </div>

            <br>

            <div class="row g-2">
                <div class="card">
                    {{#with recipients}}
                        <div class="card-title display-5 ">{{title}}</div>
                        <div class="card-body">
                            <div class="row">
                                
                                {{#each users}}
                                    <div class="col-4">
                                    <div class="card">
                                        
                                            <div class="card-body">
                                            
                                                
                                                    <div>{{name}}</div>
                                                    <div>{{phone}}</div>
                                                    {{#with button}}
                                                        <button href="{{link}}" type="button" class="btn btn-primary">{{text}}</button>
                                                    {{/with}}
                                                
                                            
                                            </div>
                                        
                                    </div>
                                    </div>
                                {{/each}}
                                
                            </div>
                            
                        </div>
                    {{/with}}
                </div>
            </div>

            <div class="row g-2">
                <div class="card">
                    {{#with contacts}}
                        <div class="card-title display-5 ">{{title}}</div>
                        <div class="card-body">
                            <div class="row">
                                
                                {{#each contactData}}
                                    <div class="col-4">
                                    <div class="card">
                                        
                                            <div class="card-body">
                                            
                                                
                                                    <div>{{name}}</div>
                                                    <div>{{value}}</div>
                                                    {{#with button}}
                                                        <button href="{{link}}" type="button" class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-outline-secondary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}">{{text}}</button>
                                                    {{/with}}
                                                
                                            
                                            </div>
                                        
                                    </div>
                                    </div>
                                {{/each}}
                                
                            </div>
                            
                        </div>
                    {{/with}}
                </div>
            </div>
            
        {{/with}}
    </div>

        <br>
        <hr>
        <br>
        
     <div class="row ge-2">
    {{#each footer}}
        <div class="col-2">
            {{#each this}}
                <div class="nav flex-column pt-2">
                    
                    <div class="nav-item">
                        <a href="{{link}}" class="nav-link">{{text}}</a>
                    </div>
                    
                </div>
            
            {{/each}}
        </div>
    {{/each}}
    </div>

</main>
