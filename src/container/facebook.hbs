{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>


    <main>
        <section>
            
            {{> title data='Facebook'}}
             
              
            <div>
                <br>
                <h4>{{name}}</h4>
                <em>
                
                {{#each users}}
                    <h5>User</h5>
                    Name: {{name}}<br>
                    Age: {{age}}<br>
                    Gender: {{gender}} <br>
                    Id: {{id}}                   
                    <hr>
                    <h5>Friends</h5>
                    {{#each friends}}
                        
                        Name: {{name}}<br>
                        Age: {{age}}<br>
                        Gender: {{gender}} <br>
                        Id: {{id}}
                        <hr>

                            

                    {{/each}}
                    <h5>Mutual friends</h5>
                        {{#each friends}}
                        
                            {{#each mutual_friends}}
                                    
                                        Name: {{name}}<br>
                                        Age: {{age}}<br>
                                        Gender: {{gender}} <br>
                                        Id: {{id}}
                                
                                {{/each}}
                                <hr>
                        {{/each}}
                        <h5>Groups</h5>
                        
                    {{#each groups}}
                        <h6>Group</h6>
                            Name: {{name}}<br>
                            Description:{{description}}<br>
                            Id: {{id}}
                            <hr>
                            <h6>Members</h6>
                            {{#each members}}
                                Name: {{name}}<br>
                                Age: {{age}}<br>
                                Gender: {{gender}} <br>
                                Id: {{id}}
                                <hr>
                            {{/each}}
                                        
                                
                    {{/each}}

                    {{#each friends}}
                        {{#each groups}}
                        <h6>Group</h6>
                            Name: {{name}}<br>
                            Description:{{description}}<br>
                            Id: {{id}}
                            <hr>
                            <h6>Members</h6>
                            {{#each members}}
                                Name: {{name}}<br>
                                Age: {{age}}<br>
                                Gender: {{gender}} <br>
                                Id: {{id}}
                                <hr>
                            {{/each}}
                                        
                                
                        {{/each}}
                    {{/each}}


                            
                {{/each}}
                </em>
                <br>
            </div>

