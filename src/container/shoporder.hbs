<main>
    {{#with navigation}}
    
    <div class="card">
        
        <div class="nav">
            {{#each links}}
                <div class="nav-item">
                    {{#if href includeHref=null }}
                    <a href="{{href}}" class="nav-link ps-3">{{text}}</a>
                    {{else}}
                    <a href="{{href}}" class="nav-link ps-3 disabled">{{text}}</a>
                    {{/if}}
                </div>
            {{/each}}
        </div>
        
       
    </div>
    
    {{/with}}
    
    <br>
    <br>

    <h1>{{header}}</h1>

    <br>
    <br>

    <div class="row g-5">
        {{#with contacts_data}}
            <div class="col-8">
            <h2>{{title}}</h2>
            
                {{#each buttons}}
                    <button type="button" class="btn {{#if isPrimary}}btn-warning{{/if}} {{#if isOutline}}btn-outline-warning{{/if}}">{{text}}</button>
                {{/each}}
            

        
        {{#with form}}
            
            {{#with input}}
                
                    {{#with surname}}
                        
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input placeholder="{{placeholder}}" class="form-control">
                            <div class="form-text">{{caption}}</div>
                        </div>

                    {{/with}}
                

                
                    {{#with name}}
                        
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input placeholder="{{placeholder}}" class="form-control">
                            <div class="form-text">{{caption}}</div>
                        </div>

                    {{/with}}
                

                
                    {{#with phone}}
                        
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input placeholder="{{placeholder}}" class="form-control">
                            <div class="form-text">{{caption}}</div>
                        </div>

                    {{/with}}
                

                
                    {{#with email}}
                        
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input placeholder="{{placeholder}}" class="form-control">
                            <div class="form-text">{{caption}}</div>
                        </div>

                    {{/with}}
                
            {{/with}}
            
            <hr>

            {{#each switch}}
                <div class="form-check form-switch pt-3 pb-3">
                    <input type="checkbox" class="form-check-input">
                    <label class="form-check-label">{{text}}</label>
                </div>
            {{/each}}
            <hr>
        {{/with}}
            </div>
        
    {{/with}}

        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    {{#each action_block}}
                        <button type="button" class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info{{/if}} mt-2 me-3">{{text}}</button>
                    {{/each}}
                </div>
            </div>
            
        

        {{#with total}}
                <div class="card">
                    <div class="card-body">
                        <h2>{{title}}</h2>
                        {{#each item_list}}
                            <div>{{name}}: {{price}}</div>
                        {{/each}}
                        <hr>
                        {{#each additional_info}}
                            <div>{{text}}: {{value}}</div>
                        {{/each}}
                        <hr>
                        {{#with total_price}}
                            <div>{{text}}: {{value}}</div>
                        {{/with}}
                        <hr>
                        {{#each button}}
                        <br>
                            <div>
                                <button type="button" class="btn {{#if isPrimary}} btn-primary{{/if}} {{#if isOutline}} btn-outline-primary{{/if}} ">{{text}}</button>
                            </div>
                            
                        {{/each}}
                    </div>
                </div>
        {{/with}}
        </div>
    </div>
    {{#with delivery}}
        <h2>{{title}}</h2>
        {{#each select}}
            <div class="card">
                <div class="card-body">
                    <label>{{label}}</label>
                    <select class="form-select">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        {{/each}}
        {{#each delivery_type}}
            <div class="">
                <input type="radio" class="form-check-input">
                <label class="form-check-label">{{type}}</label>
            </div>
        {{/each}}

        <br>
        <hr>
        <br>

        {{#with payment}}
            <h2>{{title}}</h2>
            {{#each list}}
                <div class="">
                    <input type="radio" class="form-check-input">
                    <label class="form-check-label">{{type}}</label>
                    <div class="form-text">{{description}}</div>
                </div>
            {{/each}}
        {{/with}}

        <br>
        <hr>
        <br>

        <div class="row g-3">
            {{#with contact}}
                <h2>{{title}}</h2>

                {{#with surname}}
                            
                    <div class="col-6">
                        <label class="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                        <div class="form-text">{{caption}}</div>
                    </div>

                {{/with}}
            
                {{#with name}}
                    
                    <div class="col-6">
                        <label class="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                        <div class="form-text">{{caption}}</div>
                    </div>

                {{/with}}
            
                {{#with phone}}
                    
                    <div class="col-6">
                        <label class="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                        <div class="form-text">{{caption}}</div>
                    </div>

                {{/with}}

                {{#with email}}
                    
                    <div class="col-6">
                        <label class="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                        <div class="form-text">{{caption}}</div>
                    </div>

                {{/with}}

            {{/with}}

            <br>
            <hr>
            <br>

            {{#with coment}}
                <label class="form-label">{{label}}</label>
                <input placeholder="{{placeholder}}" class="form-control">
            {{/with}}
        </div>

    {{/with}}

    <br>
    <hr>
    <br>

    {{#with coupon}}
        <h2>{{title}}</h2>
        {{#with select}}
            {{#with availabel_coupon}}
                <label>{{label}}</label>
                <select class="form-select form-select-lg">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            {{/with}}
            {{#with friend_coupon}}
                <label>{{label}}</label>
                <select class="form-select form-select-sm">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            {{/with}}
        {{/with}}
        {{#with add}}
            {{#with friend}}
                <label class="form-label">{{label}}</label>
                <input placeholder="{{placeholder}}" class="form-control form-select-lg">
                <div>{{caption}}</div>
            {{/with}}
            {{#with colleague}}
                <label class="form-label">{{label}}</label>
                <input placeholder="{{placeholder}}" class="form-control form-select-sm">
                <div>{{caption}}</div>
            {{/with}}
        {{/with}}
    {{/with}}

    <br>
    <hr>
    <br>

    {{#with quiz}}
        <h2>{{title}}</h2>
        {{#with preference}}
            <div>{{title}}</div>
            {{#each options}}
                <div class="">
                    <input type="radio" class="form-check-input">
                    <label class="form-check-label">{{this}}</label>
                </div>
            {{/each}}
        {{/with}}
        {{#with your_expirience}}
            <label class="form-label">{{label}}</label>
            <input  class="form-control">
        {{/with}}
        {{#with purchase_frequency}}
            <label class="form-label">{{label}}</label>
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        {{/with}}
        {{#with factors}}
            <div>{{title}}</div>
            {{#each options}}
            <div class="">
                    <input type="checkbox" class="form-check-input">
                    <label class="form-check-label">{{this}}</label>
            </div>
            {{/each}}
        {{/with}}
    {{/with}}

    <br>
    <hr>
    <br>

    <div class="row ge-2">
    {{#each footer}}
        <div class="col-2">
            {{#each this}}
                <div class="nav flex-column pt-2">
                    
                    <div class="nav-item">
                        <a href="{{link}}" class="nav-link">{{text}}</a>
                    </div>
                    
                </div>
            
            {{/each}}
        </div>
    {{/each}}
    </div>

</main>
